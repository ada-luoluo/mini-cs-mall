.tabs_title{
  display: flex;
}
.title_item{
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  padding: 15rpx 0;
  color: #fff;
  position: relative;
}

.title_item.active::after {
  content: "";
  display: block;
  width: 24rpx;
  border: 5rpx solid #fff;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin-left: auto;
  margin-right: auto;
  max-width: 100%;
  border-radius: 20rpx;
  
}