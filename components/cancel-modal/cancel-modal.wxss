.cancel-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1024;
  display: flex;
  justify-content: center;
  align-items: center; 
}
.showModal{  
  animation-duration: 0.5s;
  animation-fill-mode: both;
  animation-name: fadeInDown;
}
@keyframes fadeInDown {
  0% {
      opacity: 0;     
  }
  100% {
      opacity: 1;
  }
}

.modal-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);

}

.modal {
  width: 80%;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
  overflow: hidden;
  position: relative;
}

.modal-close {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  cursor: pointer;
}

.modal-title {
  padding: 40rpx;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;

}

.modal-subtitle {
  color: #707070;
  text-align: center;
  padding: 0 20rpx;
}

.modal-btns {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.modal-btns .btn-cancel,.modal-btns .btn-confirm{
  display: block;
  width: 40%;
  height: 40px;  
  text-align: center;
  border-radius: 10rpx;
  font-weight: normal;
}
.btn-cancel { 
  margin-right: 32rpx!important;
}
.btn-confirm {  
  margin-left: 32rpx!important;
  background-color: var(--themeColor);  
  color: #fff;
}

.close{
  width: 48rpx;
}
.classBtn-confirm .btn-confirm{
  width: 70%!important;
  margin: auto!important;
}
.classBtn-confirm .btn-cancel {
  display: none;
}