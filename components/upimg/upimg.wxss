/* components/upimg/upimg.wxss */
.uploader_files{
  display: flex;  
  flex-wrap: wrap;
  margin: 0 -15rpx;
}
.uploader_files>view{
  position: relative;
  margin: 0 15rpx;
}
.uploader_files .images{
  width: 150rpx;
  height: 150rpx;
  border-radius: 15rpx;
}
.uploader_file .close{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: -15rpx;
  right: -15rpx;
}
.imgTips{
  color: #A3A3A3;
  font-size: 24rpx;
  margin-top: 20rpx;
}
.imgTips>image{
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
}
.imgTips>image,.imgTips>text{
  display: inline-block;
  vertical-align: middle;
}
