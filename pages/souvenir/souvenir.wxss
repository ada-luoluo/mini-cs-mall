.searchDiv{
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 8rpx 30rpx;
  border-radius: 80rpx;
}
.searchDiv .image1{
  height: 40rpx;
  width: 40rpx;
}
.searchDiv .inputs{
  height: 70rpx;
  width: calc(100% - 60rpx);
  font-size: 28rpx;
}
.mall-txt{
  padding-top:50rpx;
}
.title1{
  display: block;
  color: #fff;
  font-weight: bold;
  font-size: 48rpx;
}
.title2{
  display: block;
  font-size: 128rpx;
  color: rgba(255, 255, 255, 0.12);
  text-transform:uppercase;
  font-weight: bold;
}


.p-bg{
  position: relative;
  margin-top: -60rpx;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  background: #f7f7f7;
  padding: 30rpx 20rpx;
}

.category-list {
  font-size: 16px;
  color: #333;
  white-space: nowrap;
 
}

.category-item {
  display: inline-block;
  vertical-align: top;
  padding: 20rpx;
 cursor: pointer;
}

.category-name {
  font-weight: bold;
}

.category-name.active {
  color:var(--themeColor);
  position: relative;
  padding-bottom: 20rpx;
}

.category-name.active::after{
  content: "";
  display: block;
  width: 40rpx;
  border: 5rpx solid var(--themeColor);
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  margin-left: auto;
  margin-right: auto;
  max-width: 100%;
  border-radius: 20rpx;
}

.subcategory-list {
  display: none;
  background-color: #f5f5f5;
  padding: 30rpx 0;
  width: 100%;
}

.subcategory-list.open {
  display: block;
}

.subcategory-item {
  display: inline-block;
  padding: 15rpx 40rpx;
  background: #E4E4E4;
  margin: 0 20rpx 0 0;
  border-radius: 40rpx;
}

.subcategory-name {
  color: #707070;
}


/* all */
.all-cate-icon{
  position: absolute;
  top: 20rpx;
  right: 0;
}
.icon-img{
  width: 80rpx;
}

.all-cate{
  position: absolute;
  top: 88rpx;
  right: 0;
  left: 0;
  width: 100%;
 background: #f7f7f7;
 padding: 30rpx;
 z-index: 1;
 transition: opacity 0.3s ease-out;
}

.all-height{
  height: 100vh - 300px;
}
.all-cate-category-item{
  padding: 20rpx 0;
}

.all-cate-category-name{
  color: #000;
  font-weight: bold;
   display: block;
   margin-bottom: 10rpx;

}
.all-cate-subcategory-list{
  display: flex;
  flex-wrap: wrap;
}

.all-cate-subcategory-item{
  width: 30%;
  background-color:#fff;
  padding: 15rpx 30rpx;
  text-align: center;
  border-radius: 50rpx;
  margin: 10rpx;
}
.all-cate-subcategory-item .active{
  color: var(--themeColor)
}

.products{
  display: flex;
  flex-wrap: wrap;
  align-items: flex-end;
  justify-content: space-between;
}

.products-li{
  margin-bottom: 20rpx;
  width: 47%;
}


.sub-active{
 background: var(--themeColor);
}

.sub-active .subcategory-name{
  color: #fff;
}
