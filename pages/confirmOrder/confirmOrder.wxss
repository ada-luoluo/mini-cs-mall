}

.fix-bottom{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 30rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.fix-bottom-c{
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.total-price{
  font-size: 44rpx;
  color:#FF4141;
  font-weight: bold;
}

.btn button{
