.mall-banner{
  position: relative;
}
.banner-c{
  height: 700rpx;
}
.top{
  position: absolute;
  top: 0;
  left: 30rpx;
  right:30rpx;
  z-index: 98;
  
}
.position{
  display: flex;
  align-items: center;
  color: #fff;
}

.position-icon{
   width: 40rpx;
}
.arrow-icon{
   width: 10rpx;
}
.name{
  max-width: 60%;
  padding: 0 15rpx;
  overflow:hidden; 
  text-overflow:ellipsis; 
  white-space:nowrap;
}

.search{
  margin-top: 40rpx;
}
.searchDiv{
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 8rpx 30rpx;
  border-radius: 80rpx;
}
.searchDiv .image1{
  height: 40rpx;
  width: 40rpx;
}
.searchDiv .inputs{
  height: 70rpx;
  width: calc(100% - 60rpx);
  font-size: 28rpx;
}

.mall-banner .wx-swiper-dots-horizontal .wx-swiper-dot {
  width: 30rpx;
  height: 6rpx;
  border-radius: 5rpx;
  margin-bottom: 60rpx;
}

.banner{
 position: relative;
}
.banner-img{
  width: 100%;
}
.mall{
  width: 100%;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  background: #fff;
  margin-top: -50rpx;
  position: relative;
  padding: 30rpx;
}
.mall-title{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.title-left{
  display: flex;
  align-items: center;
}
.title-right{
   color: #707070;
}
.title-img{
  width: 70rpx;
}
.arrow-icon{
   width: 20rpx;
}
.text{
  font-weight: bold;
  font-size: 36rpx;
  margin-left: 20rpx;
}
.goods-scroll{
  white-space:nowrap;
}
.mall-2{
    margin-top: 40rpx;
    border-radius: 0;  
}
.mall-container{
  padding-bottom: 180rpx;
