.order{
  background: var(--themeColor);
  position: relative;
}
.order-s{
  padding: 30rpx 0 50rpx 0
}
.order-container{
  background: #F7F7F7;
  padding: 40rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  position: relative;
  margin-top: -50rpx;
}
.order-item{
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;

}
.oder-top{
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom:1px solid #DADADA;
  padding-bottom: 20rpx;
}
.order-states{
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
}




.order-info{
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1px solid #DADADA;
}
.order-img{
  width: 123px;
  border-radius: 20rpx;
  margin-right: 20rpx;
}
.text1{
  display: block;
  font-weight: bold;
}
.text2{
  display: block;
  color: #707070;
  padding-top: 10rpx;
  font-size: 26rpx;
}
.order-bottom{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 20rpx 0 0 0;
}
.oder-price{
  width: 100%;
  text-align: right;
  margin-bottom: 20rpx;
}

.oder-price span{
  color: #FF4141;
  font-weight: bold;
  font-size: 32rpx;
}

.oder-btns{
  display: flex;
  width: 100%;
  justify-content: flex-end;
}

.oder-btns button{
  border-radius:60rpx;
  font-size: 28rpx;
  font-weight: normal;
}
button.btns-1{
   width: 220rpx!important;
   margin: 0!important;
  border: 1px solid #979797;
}

button.btns-2{
   width: 220rpx!important;
   margin: 0 0 0 40rpx!important;
   color: #fff;
   
   background: var(--themeColor);
  
}


