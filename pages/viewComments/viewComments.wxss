  display: flex;
  padding: 30rpx;
  border-radius: 20rpx;
  background-color:#fff;
}

.order-img{
  width: 123px;
  border-radius: 20rpx;
  margin-right: 20rpx;
}
.text1{
  display: block;
  font-weight: bold;
}
.text2{
  display: block;
  color: #707070;
  padding-top: 10rpx;
}
