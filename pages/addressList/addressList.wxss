.top{
  background: linear-gradient(180deg, #3383FF 0%, #3283FF 10%, #F7F7F7 100%);
  height: 500rpx;
  position: fixed;
  left: 0;
  width: 100%;
  z-index: -1;
}

.order-nav-bar{
  display: flex;
  padding: 60rpx 20rpx 0 20rpx;
}
.back{
  width: 24rpx;
}
.nav-back-title{
  width: calc(100% - 20rpx);
  text-align: center;
  color: #fff;
}

.empty{
  padding:200rpx 30rpx 30rpx 30rpx;
}

.empty-bg{
  background-color: #fff;
  padding: 30rpx;
  border-radius: 30rpx;
}
.no-img{
  width: 60%;
  display: block;
  margin: 80rpx auto;
}

.add-btn{
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background: var(--themeColor);
  font-weight: normal;
  color: #fff;
  margin-left: 30rpx!important;
  margin-right: 30rpx!important;
}
