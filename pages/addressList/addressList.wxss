.edit{
  width: 120rpx;
  height: 154rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}


/*  */
movable-area {
  width: 510rpx; 
}
.container, movable-view {
  box-sizing: border-box;
  width: 750rpx;
  height: 220rpx; 
}
.container {
  position: relative;
  display: flex;
  flex-direction: row;
}
movable-view {
  z-index: 5; 
  padding: 20rpx;
  overflow: hidden;
}

/* 隐藏部分样式--删除按钮 */
.operations-content {
  position: absolute;
  display: flex;
  flex-direction: row-reverse;
  justify-content: left;
  align-items: center;
  z-index: 2; 
  right: 20rpx;
  top: 20rpx;
  width: 200rpx; /* 隐藏部分的宽度 */
  height: 194rpx;
  background-color: #FF4141;
  border-radius: 20rpx;
}
.operation-button {
  width: 100%;
  height: 100%;
  line-height: 194rpx;
  text-align: center;
  color: #fff;
}

/* 卡片样式 */
.card-container {
  width: 100%;
  word-break: break-all;
  background-color: #fff;
  border-radius: 16rpx;
  height: 194rpx;
}

.show-operations {
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 80rpx;
}

